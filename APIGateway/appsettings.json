{
  "ReverseProxy": {
    "Routes": {
      "chatRoute": {
        "ClusterId": "chat",
        "Match": {
          "Path": "/api/chat/{**catch-all}"
        },
        "AuthorizationPolicy": "Default",
        "Transforms": [
          { "PathRemovePrefix": "/api/chat" }
        ]
      },
      "authRoute": {
        "ClusterId": "auth",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "AuthorizationPolicy": null,
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" }
        ]
      }
    },
    "Clusters": {
      "chat": {
        "Destinations": {
          "chatDestination": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "auth": {
        "Destinations": {
          "authDestination": {
            "Address": "http://localhost:5000/"
          }
        }
      }
    }
  }
}